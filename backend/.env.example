# backend/.env.example
# Copy this to .env locally and fill with real values (do NOT commit .env)

PORT=5000

# MongoDB (Atlas)
MONGO_URI=REPLACE_ME

# Auth
JWT_SECRET=REPLACE_ME

# Email (nodemailer)
EMAIL_USER=REPLACE_ME
EMAIL_PASS=REPLACE_ME

# Frontend / CORS
FRONTEND_URL=https://your-frontend.example.com
ALLOWED_ORIGINS=https://your-frontend.example.com

# ESEWA / Payment
ESEWA_PRODUCT_CODE=REPLACE_ME
ESEWA_SECRET_KEY=REPLACE_ME
ESEWA_GATEWAY_URL=https://rc-epay.esewa.com.np/api/epay/main/v2/form
SUCCESS_URL=https://your-backend.onrender.com/payment-success
FAILURE_URL=https://your-backend.onrender.com/payment-failure

# (Optional) AWS S3 for uploads
AWS_ACCESS_KEY_ID=REPLACE_ME
AWS_SECRET_ACCESS_KEY=REPLACE_ME
S3_BUCKET_NAME=REPLACE_ME
S3_REGION=REPLACE_ME

NODE_ENV=development
